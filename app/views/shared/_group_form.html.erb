<h2>Bem vindo(a), <%= @group.user.name %>!</h2>
<h3>Criar grupo</h3>
<div class="col-md-6 col-md-offset-3">
<%= form_for(@group) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <%= f.label :name, "Nome do Grupo" %>
  <%= f.text_field :name %>

  <%= f.submit "Criar grupo", class: "btn btn-primary" %>
<% end %>
</div>
