<!DOCTYPE html>
<html>
  <head>
    <title>EP3</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% flash.each do |message_type, message| %>
      <div class="alert alert-<%= message_type %>"><%= message %></div>
    <% end %>
    <%= yield %>
    <%= render 'layouts/footer' %>

    <header class="navbar navbar-fixed-top navbar-inverse">
<div class="container">
<%= link_to "amigo secreto", root_path, id: "logo" %>
<nav>
  <ul class="nav navbar-nav navbar-right">
    <li><%= link_to "Página inicial", root_path %></li>
    <% if logged_in? %>
      <% if current_user.admin? %>
        <li><%= link_to "Usuários", users_path %></li>
      <% end %>
      <li class="dropdown">
        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
          Conta <b class="caret"></b>
        </a>
        <ul class="dropdown-menu">
          <li><%= link_to "Perfil", current_user %></li>
          <li class="divider"></li>
          <li>
            <%= link_to "Sair", sair_path, method: "delete" %>
          </li>
        </ul>
      </li>
    <% end %>
  </ul>
</nav>
</div>
</header>
    <div class="container">
    </div>
  </body>
</html>
