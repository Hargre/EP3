<div class="row">
  <aside class="col-md-4">
    <section>
      <h1>
        <%= @group.name %>
      </h1>
      <p>
        Organizador:
        <%= @group.user.name %>
      </p>
    </section>
    <section>
      <%= render 'shared/participants_form' %>
    </section>
  </aside>
  <% if @participants.present? %>
    <div class="col-md-8">
      <h3>
        Participantes
        <%= (@participants.count) %>
      </h3>
      <ul class="participants">
        <%= render @participants %>
        <%= will_paginate(@participants) %>
      </ul>
      <% if @participants.count > 2 && !@group.matched %>
        <%= link_to 'Sortear', group_match_path(@group), class: "btn btn-primary", method: 'post' %>
      <% end %>
    </div>
  <% end %>
</div>
