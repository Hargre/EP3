<h1>Todos os usuários</h1>

<ul class="users">
  <% @users.each do |user| %>
    <li>
      <%= link_to user.name, user %>
      <% if current_user.admin? && !current_user?(user) %>
        | <%= link_to "Remover", user, method: :delete,
                                       data: { confirm: "Você tem certeza?" } %>
      <% end %>
    </li>
  <% end %>
</ul>
